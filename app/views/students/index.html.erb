<p id="notice"><%= notice %></p>

<div class="search-index">
  <%= form_tag({},method: "get") do %>
    <%= text_field_tag :search,params[:search] ,placeholder: "Search first name or last name or full name" ,:size=>30%>
    <%= submit_tag "Search" %>
  <% end %>
</div>


<h1>Students List</h1>

<table>
  <thead>
    <tr>
      <th>Enroll no</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Phone</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>Country</th>
      <th>Postcode</th>
      <th>Avatar</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.enroll_no %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= student.gender %></td>
        <td><%= student.date_of_birth %></td>
        <td><%= student.phone %></td>
        <td><%= student.address1 %></td>
        <td><%= student.address2 %></td>
        <td><%= student.city %></td>
        <td><%= student.country %></td>
        <td><%= student.postcode %></td>
        <td><%= student.avatar %></td>
        <td><%= student.status %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure want to delete this student?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

