<div class="add-user-wrapper container-fluid">
  <div class="container">
    <div class="add-user">
      <div class="new-user user-details">
        <div class="shcedule-form col-md-12 col-sm-12 col-xs-12">
          <div class="mid-title">
            <h1 class="col-lg-12"><%= link_to "Students", root_url %></h1>
            <div class="right-link">
              <%= link_to 'Add student', new_student_path,class: "submit-form btn btn-success" %>
            </div>
          </div>
          <div class="search">
            <%= form_tag({}, method: "get") do %>
              <div class="login-form search-form">
                <div class="login-form-row">                  
                  <div class="login-l">                           
                    <div class="user-input search-input">
                      <%= text_field_tag :search,params[:search] ,placeholder: "Search first name or last name or full name" , class: "input-xlarge",:size=>"50"%>                            
                    </div>
                  </div>
                  <div class="login-r search-btn">                    
                    <%= submit_tag "Search" ,:class=>"submit-form btn btn-success" %>                             
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <table class="schedule-table" align="center" border="1">
            <thead>      
              <tr>
                <th>Enroll no</th>
                <th>Name</th>      
                <th>Email</th>
                <th>Gender</th>                
                <th>Phone</th>               
                <th>City</th>
                <th>Country</th>
                <th>Postcode</th>        
                <th>Status</th>
                <th colspan="2">Actions</th>      
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
                <tr class="<%= cycle('even','odd') %>">
                  <td><%= student.enroll_no %></td>
                  <td><%= student.name %></td>        
                  <td><%=link_to student.email, student %></td>
                  <td><%= student.gender.to_s.titlecase %></td>                  
                  <td><%= student.phone %></td>                 
                  <td><%= student.city %></td>
                  <td><%= student.country %></td>
                  <td><%= student.postcode %></td>                  
                  <td><%= student.status.to_s.titlecase %></td>                          
                  <td><%= link_to 'Edit', edit_student_path(student) %></td>
                  <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure want to delete this student?' } %></td>
                </tr>
              <% end %>                  
            </tbody>
          </table>              
        </div>
        <%= will_paginate @students %>
      </div>
    </div>
  </div>
</div>